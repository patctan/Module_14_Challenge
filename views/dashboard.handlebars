<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.username}}!</h2>
  </div>
</div>

<div >
  <div >
    <h3>Create a New Project:</h3>

    <form>
      <div >
        <label for="project-name">Your blog post I guess:</label>
        <input
          
          type="text"
          name="project-name"
        />
      </div>
      <div >
        <label for="project-funding">Filler text:</label>
        <input
          class="form-input"
          type="number"
        
        />
      </div>
      <div >
        <label for="project-desc">description:</label>
        <textarea
         
          name="project-desc"
        ></textarea>
      </div>
      <div >
        <button type="submit" >filler text</button>
      </div>
    </form>
  </div>

  {{#if post.text}}
    <div >
      <h3>Current Projects:</h3>

      {{#each posts as |post|}}
        <div >
          <div >
            <h4><a href="/project/{{post.id}}">{{post.title}}</a></h4>
          </div>
          <div >
            <button
              
              data-id="{{post.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>